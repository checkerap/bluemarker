<h1><%= @paper.title %></h1>

<p><strong>Description:</strong> <%= @paper.description %></p>
<p><strong>User:</strong> <%= @paper.user.email %></p>
<p><strong>Talk:</strong> <%= @paper.talk.title %></p>

<% if @paper.document.attached? %>
  <%= link_to "Open document", @paper.document %>
<% end %>

<div class="mt-5">
  <%= link_to 'Edit', edit_paper_path(@paper) %> |
  <%= link_to 'Destroy', @paper, method: :delete, data: { confirm: 'Are you sure?' } %> | 
  <%= link_to 'Back', @paper.talk %>
</div>