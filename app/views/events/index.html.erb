    <% @events_current.each do |event| %>
      <div class="carousel-cell col-9 col-md-8 col-lg-5 text-center">
      <a href="/events/<%= event.id %>" class="d-block mb-3">
        <%= image_tag(event.image, class: "img-fluid rounded") %>
      </a>
      <span class="h6"><%= event.title %></span>
    </div>
    <% end %>
  </div>
</section>

