<% if user.image.attached? %>
  <%= ix_image_tag( 
    url_for(user.image), 
    url_params: { facepad: 50, w: 500, h: 500, fit: 'facearea', crop: 'right'},
    tag_options: { :class => image_classes || 'avatar' } ) %>
<% else %>
  <img alt="Image" src="/img/avatar-male-1.jpg" class="<%= image_classes || 'avatar' %>" />
<% end %>