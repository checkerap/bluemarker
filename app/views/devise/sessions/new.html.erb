<div class="col-12 col-md-8 col-lg-7">
  <div class="card card-lg text-center">
    <div class="card-body">
      <div class="mb-4">
        <h1 class="h2 mb-2">Hello again</h1>
        <span>Sign in to your account to continue</span>
      </div>
      <div class="row no-gutters justify-content-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'text-left col-lg-8'} ) do |f| %>
          <% if notice.present? or alert.present?  %>
            <p class="text-center"><%= notice %><%= alert %></p>
          <% end %>
          <div class="form-group">
            <label for="login-email">Email Address</label>
            <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Email Address" %>
          </div>
          <div class="form-group">
            <label for="login-password">Password</label>
              <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter a password"%>
            <small>Forgot password? <a href="/users/password/new">Reset here</a>
            </small>
          </div>
          <div class="text-center mt-3">
            <button type="submit" class="btn btn-lg btn-primary">Log in</button>
          </div>
        <% end %>
      </div>
      <!--end of row-->
    </div>
  </div>
  <div class="text-center">
    <span class="text-small">Don't have an account yet? <a href="/users/sign_up">Create one</a></span>
  </div>
  <div class="text-center">
    <span class="text-small">Go back to the <a href="/">home page</a></span>
  </div>
  
</div>
<!--end of col-->
