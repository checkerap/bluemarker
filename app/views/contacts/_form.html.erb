<%= form_with(model: contact, local: true) do |form| %>
  <div class="form-group">
    <label for="exampleInputUsername">Name</label>
    <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "Name" %>
    <!--<input type="text" class="form-control form-control-lg" id="exampleInputUsername" placeholder="Pick a username">-->
  </div>
  <div class="form-group">
    <label for="exampleInputUsername">Email</label>
    <%= form.text_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
    <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
    <!--<input type="text" class="form-control form-control-lg" id="exampleInputUsername" placeholder="Pick a username">-->
  </div>
  <div class="form-group">
    <label for="exampleInputUsername">Phone</label>
    <%= form.text_field :phone, class: "form-control form-control-lg", placeholder: "Phone" %>
    <!--<input type="text" class="form-control form-control-lg" id="exampleInputUsername" placeholder="Pick a username">-->
  </div>
  <div class="form-group">
    <label for="exampleInputUsername">Message</label>
    <%= form.text_area :message, class: "form-control form-control-lg", placeholder: "Message" %>
    <!--<input type="text" class="form-control form-control-lg" id="exampleInputUsername" placeholder="Pick a username">-->
  </div>
  <button type="submit" class="btn btn-lg btn-success btn-block">Send message</button>
<% end %>