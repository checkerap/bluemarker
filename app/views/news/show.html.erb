<section>
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-auto">
        <h3>Latest news</h3>
      </div>
    </div>
    <ul class="feature-list feature-list-sm row">
      
      <% @latest_news.each do |news| %>
      
      <li class="col-12 col-md-6 col-lg-4">
        <div class="card card-lg">
          <%= link_to news_path(news) do %>
            <!--<img class="card-img-top" src="/img/photo-man-box.jpg" alt="There is no competition">-->
            <% if news.image.attached? %>
              <%= image_tag(news.image, class: "card-img-top") %>
            <% end %>
          <% end %>
          <div class="card-body">
            <%= link_to news_path(news) do %>
              <h4 class="card-title mb-3"><%= news.title %></h4>
            <% end %>
            <p class="card-text"><%= truncate(news.summary, length: 200) %></p>
          </div>
          <div class="card-footer card-footer-borderless d-none">
            <div class="media blog-post-author">
              <img alt="Image" src="/img/avatar-female-1.jpg" class="avatar avatar-xs" />
              <div class="media-body">
                <small>Autor name</small>
                <small><%= @news.created_at.to_date %></small>
              </div>
            </div>
          </div>
        </div>
      </li>
      
      <% end %>


    </ul>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>
<!--end of section-->