<section class="bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-7">
        <h1 class="display-4"><%= @news.title %></h1>
        
        <% if @news.summary %>
        <span class="lead"><%= @news.summary %></span>
        <% end %>
        
        <div class="media blog-post-author d-none">
          <img alt="Image" src="/img/avatar-male-1.jpg" class="avatar avatar-sm mr-3" />
          <div class="media-body">
            <span class="h6 d-none">Author name</span>
            <span class="text-small"><%= @news.created_at.to_date %></span>
          </div>
        </div>
      </div>
      <!--end of col-->
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>
<!--end of section-->
<!--<img alt="Image" src="/img/photo-team-desk-blog.jpg" class="img-fluid" />-->
<section>
  <article class="container">
    <div class="row justify-content-center">
      
      <!--end of col-->
      <figure class="figure text-center col-12 col-md-10 col-lg-8">
        <!--<img alt="Image" class="img-fluid figure-img rounded" src="/img/photo-woman-laptop.jpg" />-->
        <% if @news.image.attached? %>
          <%= image_tag(@news.image, class: "img-fluid figure-img rounded") %>
        <% end %>
      </figure>
      <div class="col-12 col-md-8 col-lg-6">
        <%= @news.description %>
      </div>

      <!--end of col-->
    </div>
    <!--end of row-->
    
  </article>
  <!--end of container-->
</section>

<!--end of section-->
