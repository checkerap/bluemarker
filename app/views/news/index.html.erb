<section class="flush-with-above">
  <div class="container">
    <%= link_to 'New', new_news_path %>
    <ul class="row mb-3 feature-list feature-list-sm">
      
        
      <% @news.each do |news| %>
      <li class="col-12 col-md-6 col-lg-4">
        <div class="card card-lg">
          <a href="/news/<%= news.id %>">
            <!--<img class="card-img-top" src="/img/photo-team-desk.jpg" alt="Starting Up - A Candid Documentary">-->
            <% if news.image.attached? %>
              <%= image_tag(news.image, class: "card-img-top") %>
            <% end %>
          </a>
          <div class="card-body">
            <a href="/news/<%= news.id %>">
              <h4 class="card-title mb-3"><%= news.title %></h4>
            </a>
            <p class="card-text">Short summary</p>
          </div>
          <div class="card-footer card-footer-borderless">
            <div class="media blog-post-author">
              <img alt="Image" src="/img/avatar-male-1.jpg" class="avatar avatar-xs" />
              <div class="media-body">
                <small>Author name</small>
                <small><%= news.created_at.to_date %></small>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
    </ul>
    <!--end of row-->
    <div class="row justify-content-center">
      <div class="col-auto">
        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true"><i class="icon-chevron-left"></i>
                </span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true"><i class="icon-chevron-right"></i>
                </span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <!--end of col-->
    </div>
    <!--end of row-->
  </div>
  <!--end of container-->
</section>
